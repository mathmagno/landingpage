# Servidor
PORT=3001
NODE_ENV=development

# Banco de dados PostgreSQL
# Exemplo local: postgresql://usuario:senha@localhost:5432/portfolio
# Exemplo Neon/Supabase: postgresql://...
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/portfolio?schema=public"

# Gmail (use uma App Password — não sua senha real)
# Para criar: https://myaccount.google.com/apppasswords
GMAIL_USER="seuemail@gmail.com"
GMAIL_APP_PASSWORD="xxxx xxxx xxxx xxxx"

# E-mail que receberá os contatos
OWNER_EMAIL="seuemail@gmail.com"

# CORS — URL do seu frontend
FRONTEND_URL="http://localhost:5173"
